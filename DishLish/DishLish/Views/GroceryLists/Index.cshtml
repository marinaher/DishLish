@model IEnumerable<DishLish.Models.GroceryList>

@{
    ViewBag.Title = "Index";
}
<head>
    <meta charset="utf-8" />
    <title>Grocery List</title>
    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <link href="~/Content/master.css" rel="stylesheet" />
</head>
<body>
    <div id="page">
        <div id="groceryIcon">
            <img src="~/Images/smileFood.png" alt="Cute Smiling Foods" id="smilingFood" />
            <h1>Grocery List</h1>
        </div>
        <div id="main">
            <div id="top">
                <p>Add ingredients. Check them off. Delete when complete.</p>
                <p>Simple. Like, eating a tub of ice cream!</p>
            </div>
            <hr />
            @*<p>
                @Html.ActionLink("Add to grocery list", "Create")
            </p>*@
           <div>
                <select name="Category" id="dropDown" class="dropdown btn">
                    <option value="dairyCategory">Dairy</option>
                    <option value="fruitCategory">Fruit</option>
                    <option value="grainCategory">Grain</option>
                    <option value="meatCategory">Meat&amp;Fish</option>
                    <option value="vegetableCategory">Vegetable</option>
                    <option value="otherCategory">Other</option>
                </select>
            </div>
            <div id="form">
                <input type="text" id="input" class="btn" placeholder="Enter in item..." onsubmit="emptyText();" />
                <button id="add" class="btn">Add</button>
                <button id="remove" class="btn" onclick="return emptyText();">Remove Last</button>
                <br />
                <ul id="list"></ul>
            </div>
        </div>
    </div>
