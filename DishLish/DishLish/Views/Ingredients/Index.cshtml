@model DishLish.Models.IndexViewModel
@{
    ViewBag.Title = "Index";
}
<head>
    <meta charset="utf-8"/>
    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <link href="~/Content/master.css" rel="stylesheet" />
</head>

<body>

    <h2>Ingredients Index</h2>
    <p>List of available ingredients.</p>
    <p>@Html.ActionLink("Create New", "Create")</p>
    <br />
    <table class="table">
        <tr>
            <th>Ingredient Name</th>
            <th>Category</th>
            <th>UnitOfMeasurement</th>
            <th></th>
        </tr>
        @foreach (var item in Model.currentIngredients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IngredientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitOfMeasurement)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>

    <div>
        <button onclick="GetReceipesBasedOnIngredients('@Model.ingredients')" type="button" id="whatCanIMake" class="btn btn-secondary">Search for recipes based on my current ingredients.</button>
    </div>

    <script src="~/Scripts/scripts.js"></script>
</body>


